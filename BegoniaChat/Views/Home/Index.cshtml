@model BegoniaChat.Models.LoginModel

@section header{
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/login-form.css" rel="stylesheet" />
}

<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
    <div class="logo">login</div>
    <!-- Main Form -->
    <div class="login-form-1">
        @using (Html.BeginForm("login", "home", FormMethod.Post, new { enctype = "multipart/form-data", CssStyleCollection = "text-left" }))
        {
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Account, "Username" , new { @class = "sr-only" })
                        @Html.TextBoxFor(m => Model.Account, null, new { @class = "form-control", placeholder = "username", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Password, "Password", new { @class = "sr-only" })
                        @Html.PasswordFor(m => Model.Password, new { @class = "form-control", placeholder = "password", required = "required" })
                    </div>
                    <div class="form-group login-group-checkbox">
                        @Html.CheckBoxFor(m => Model.IsRemember)
                        @Html.LabelFor(m => Model.IsRemember, "Remember")
                    </div>
                </div>
                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
            </div>
            <div class="etc-login-form">
                @*<p>forgot your password? <a href="#">click here</a></p>*@
                <p>new user? <a href="@Url.Action("index","register")">create new account</a></p>
            </div>
            @Html.AntiForgeryToken()
        }
    </div>
</div>